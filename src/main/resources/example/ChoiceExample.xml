<behaviourtemplates>

	<is name="counter">
		{
		"value" : 1
		}
	</is>

	<template id="1" name="Template A">
		<preconditions>
			<condition> is.counter.value &lt; 10</condition>
		</preconditions>

		<effects>
			<assign is="is.counter.value"> is.counter.value = is.counter.value + 1 </assign>
		</effects>

		<effects mode="weighted">
			<method class="hmi.flipper2.example.Dynamic" name="f" weight="1">
				<arguments>
					<value class="String" constant="Choice A" />
				</arguments>
			</method>
			<method class="hmi.flipper2.example.Dynamic" name="f" weight="1">
				<arguments>
					<value class="String" constant="Choice B" />
				</arguments>
			</method>
			<method class="hmi.flipper2.example.Dynamic" name="f" weight="1">
				<arguments>
					<value class="String" constant="Choice C" />
				</arguments>
			</method>
		</effects>


	</template>

</behaviourtemplates>

